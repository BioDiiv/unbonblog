{% extends 'base.html.twig' %}


{% block body %}

<div class="m-5 mx-auto" style="width: 60%">

    <h1 class="text-center">Login</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="form-group">
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" class = "form-control" />
            {% endif %}
    </div>

    <div class="form-group">
        <label for="username">Nom d'utilisateur</label>
        <input class = "form-control" type="text" id="username" name="_username" required="required"/>
    </div>

    <div class="form-group">
        <label for="password">Mot de passe</label>
        <input class = "form-control" type="password" id="password" name="_password" required="required"/>
    </div>

    <div class="form-check form-group">
        <input class = "form-check-input"type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label class = "form-check-label" for="remember_me">Se souvenir de moi</label>
    </div>

    <div class="text-center">
        <input type="submit" class="btn btn-primary" value="Se connecter"/>
    </div>

</form>


</div>

{% endblock %}
