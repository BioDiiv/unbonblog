{% extends 'base.html.twig' %}

{% block body %}

    <section class="content">
        {% if (post != null) %}
            <div class="card shadow m-5 border-0">
                <!-- <img class="card-img-top" src="https://source.unsplash.com/800x150/?'{{post.title}}" alt="Card image cap" id="card-image"> -->
                <img class="card-image card-img-top" src="" alt="Card image cap">
                <div class="card-body pl-3 pr-3">
                    <h5 class="card-title">{{ post.title }}</h5>
                    <p class="card-text">{{ post.content }}</p>
                    <div class="d-flex justify-content-between">
                        <p>
                            {{ post.published|date('d-m-Y H:i:s') }}
                        </p>
                        {% if is_granted('ROLE_USER') %}
                        <div>
                            <a href="/post/{{ post.id }}/edit"><button class="btn btn-info">Editer</button></a>
                            <a href="/post/{{ post.id }}/delete"><button class="btn btn-warning">Supprimer</button></a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <h1 class="text-center">Ce post n'existe pas :(</h1>
        {% endif %}
    </section>

{% endblock %}
