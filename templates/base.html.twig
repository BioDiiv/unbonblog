<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}UnBonBlog - Bienvenue{% endblock %}</title>

        <!-- All the stylesheets linked below -->
        {% block stylesheets %}
        <link href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/lux/bootstrap.min.css" rel="stylesheet" integrity="sha384-hVpXlpdRmJ+uXGwD5W6HZMnR9ENcKVRn855pPbuI/mwPIEKAuKgTKgGksVGmlAvt" crossorigin="anonymous">    
        <link rel="stylesheet" href="/css/styles.css">
        <link href="https://unpkg.com/ionicons@4.5.10-0/dist/css/ionicons.min.css" rel="stylesheet">
        {% endblock %}
    
    </head>
    <body class="d-flex flex-column" id="toggler-container">
        <!-- Page base template -->
            <header>
                <nav class="navbar navbar-expand-lg navbar-light bg-light shadow" id="navbar">
                <a class="navbar-brand" href="/"><h1>Un bon blog</h1></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <div class="col-10">
                    <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" href="/about">A propos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link text-dark" href="mailto:unbonblog@lebonblog.com">Contact</a>
                    </li>
                    </ul>
                </div>
                    <li class="nav-item mt-2 mr-2 float-right" style="list-style-type: none;">
                        <!-- Rectangular switch -->
                        <label class="switch">
                            <input type="checkbox" class="dark-mode-toggle" id="dark-mode-toggle">
                            <span class="slider"></span>
                        </label>
                    </li>
                    <li class="nav-item mr-auto float-left" style="list-style-type: none;">
                        <!-- @TODO : if user (admin) is logged-in, then display "CrÃ©er un post" instead of "Login" -->
                        <button class="float-left btn btn-primary">Login</button>
                    </li>
                </nav>
            </header>
        <div  style="width: 80%;" class="mx-auto" id="page-content">
        {% block body %}
        <!-- Here the rest of the content -->
        {% endblock %}
        </div>
        
        <!-- Footer -->
        <footer id="sticky-footer" style="height:50px;" class="bg-secondary d-flex align-items-center shadow-sm">
                <!-- Copyright -->
                <div class="container text-center font-weight-bold text-dark">Copyright @unbonblog <i class="icon ion-md-happy"></i></div>
                <!-- Copyright -->
        </footer>
        <!-- Footer -->
        

        <!-- All the scripts linked below -->
        {% block javascripts %}
                <script src="/js/scripts.js"></script>
                <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
                <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.0/js/bootstrap.min.js" integrity="sha384-3qaqj0lc6sV/qpzrc1N5DC6i1VRn/HyX4qdPaiEFbn54VjQBEU341pvjz7Dv3n6P" crossorigin="anonymous"></script>
        {% endblock %}

    </body>
</html>
